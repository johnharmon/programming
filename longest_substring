class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        longest_substring = ''
        working_substring = ''
        for index in range(0, len(s)):
            letter = s[index]
            if not letter in working_substring:
                working_substring += letter
                if len(working_substring) > len(longest_substring):
                    longest_substring = working_substring
            else:
                repeat_index = working_substring.index(letter)
                working_substring += letter
                working_substring = working_substring[repeat_index+1:]
        return len(longest_substring)
                