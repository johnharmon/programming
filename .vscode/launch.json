    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch User Testing",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "args": "${fileDirname}/users.txt"
        },

        {
            "name": "Test Concurrency (concurrency)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/concurrency-test/loop.go",
            "args": ["concurrency"]
        },
        {
            "name": "Test Concurrency (mutex)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/concurrency-test/loop.go",
            "args": ["mutex"]
        },
        {
            "name": "Test Concurrency (mutex) (scoped)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "args": ["mutex"]
        },
        {
            "name": "Test Concurrency (none)",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/go/concurrency-test/loop.go",
        },
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}"
        }

    ]
}